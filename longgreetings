<body>
  <div class="greeting-box">
    <div class="left greet" id="greetText">Loading...</div>
    <div class="center date" id="dateText"></div>
    <div class="right clock" id="clockText"></div>
  </div>

  <script>
    function updateTime() {
      const now = new Date();
      const hours = now.getHours();
      const minutes = now.getMinutes();

      const day = String(now.getDate()).padStart(2, '0');
      const month = now.toLocaleString('default', { month: 'long' });
      const year = now.getFullYear();

      const hh = String(hours).padStart(2, '0');
      const mm = String(minutes).padStart(2, '0');

      // Greeting based on time
      let greetMsg = "Hello!";
      if (hours < 12) {
        greetMsg = "Rise and shine, Team!";
      } else if (hours < 17) {
        greetMsg = "Halfway there, keep it up!";
      } else if (hours < 21) {
        greetMsg = "You did great today!";
      } else {
        greetMsg = "Sleep tight, champs!";
      }

      document.getElementById('greetText').textContent = greetMsg;
      document.getElementById('dateText').textContent = `${day} ${month} ${year}`;
      document.getElementById('clockText').textContent = `${hh}:${mm}`;
    }

    updateTime();
    setInterval(updateTime, 1000);
  </script>
</body>
